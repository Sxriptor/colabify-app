{
  "name": "devpulse",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"cross-env NODE_ENV=development next dev --turbopack\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "next:dev": "next dev --turbopack",
    "next:build": "next build",
    "next:export": "next export",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "build": "next build",
    "electron:build": "npm run build && electron-builder",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "start": "npm run build && concurrently \"next start\" \"wait-on http://localhost:3000 && electron .\"",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:seed": "tsx scripts/seed.ts",
    "db:reset": "tsx scripts/reset.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.74.0",
    "@types/nodemailer": "^7.0.2",
    "@types/web-push": "^3.6.4",
    "chokidar": "^4.0.3",
    "d3": "^7.9.0",
    "dotenv": "^17.2.3",
    "http": "^0.0.1-security",
    "keytar": "^7.9.0",
    "next": "15.5.4",
    "nodemailer": "^7.0.9",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "simple-git": "^3.25.0",
    "supabase": "^2.48.3",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/chokidar": "^1.7.5",
    "@types/d3": "^7.4.3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "jsdom": "^27.0.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.1"
  }
}
